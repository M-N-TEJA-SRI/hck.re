find the count and sum of negative nos
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
   int n;
   cin>>n;
  int a[n],i,c=0,sum=0;
  for(i=0;i<n;i++){
      cin>>a[i];
      if(a[i]<0){
          c++;
          sum+=a[i];
      }
  }
  cout<<c<<" "<<sum;
    return 0;
}
output
4
-8 -4 1 3
2 -12
