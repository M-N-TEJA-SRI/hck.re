find the number of peak elements
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
  int n;
  cin>>n;
  int a[n],i,c=0,maxi=0;
  for(i=0;i<n;i++){
      cin>>a[i];
  }
  for(i=1;i<n-1;i++){
      if(a[i]>a[i-1]&&a[i]>a[i+1])
      c++;
  }
  cout<<c;
  
return 0;
}
output
4
5 2 10 2
1
