#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
  int n;
  cin>>n;
  int a[n],i;
  for(i=0;i<n;i++){
      cin>>a[i];
  }
  int t;
  cin>>t;
  while(t--){
      int l,r,c=0;
      cin>>l>>r;
      l-=1,r-=1;
      for(i=l;i<=r;i++){
          if(a[i]==1)
          c++;
      }
      cout<<c<<"\n";
  }
    return 0;
}
