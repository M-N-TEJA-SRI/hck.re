a boy will try to do sums as daily streak if boy does sum it is shown as 1 else 0 find the maximum streak#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
  int n;
  cin>>n;
  int a[n],i,c=0,maxi=0;
  for(i=0;i<n;i++){
      cin>>a[i];
      if(a[i]==1){
          c++;
          maxi=max(maxi,c);
      }
      else
      c=0;
  }
  maxi=max(maxi,c);
  cout<<maxi;
  
return 0;
}
output
8
1 0 0 1 1 1 1 1
5
